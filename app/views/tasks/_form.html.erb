<%= form_with(model: @task, local: true) do |f| %>
<%= render 'layouts/error_messages', object: f.object %>

<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :content %>
<%= f.text_field :content %>

<%= f.label :priority %>
<%= f.text_field :priority %>

<%= f.label :deadline %>
<%= f.datetime_select :deadline %>

<%= f.label :task_status %>
<%= f.select :task_status, Task.task_statuses.keys.map { |key| [key, key] } %>

<%= f.submit yield(:button_name), class: 'btn btn-primary' %>

<% end %>