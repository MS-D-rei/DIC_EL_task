<%= form_with(model: @task, local: true) do |f| %>

<%= f.label :content %>
<%= f.text_field :content %>

<%= f.label :priority %>
<%= f.text_field :priority %>

<%= f.label :deadline %>
<%= f.time_field :deadline %>

<%= f.label :status %>
<%= f.text_field :status %>

<%= f.submit yield(:button_name), class: 'btn btn-primary' %>

<% end %>