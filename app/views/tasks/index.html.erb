<%= link_to 'new task', new_task_path %>
<%= render 'searchbar' %>
<% if params[:keyword] %>
Search with: <%= params[:keyword] %>
<% end %>
<% if params[:status_word] %>
Search status with: <%= params[:status_word] %>
<% end %>
<table>
  <thead>
    <tr>
      <th><%= sort_order 'title', 'タイトル' %></th>
      <th><%= sort_order 'content', '内容' %></th>
      <th><%= sort_order 'priority', '優先度' %></th>
      <th><%= sort_order 'deadline', '期日' %></th>
      <th><%= sort_order 'task_status', '状況' %></th>
      <th><%= t('view.details') %></th>
      <th><%= t('view.edit') %></th>
      <th><%= t('view.destroy') %></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= t('view.title') %>: <%= task.title %></td>
      <td><%= t('view.content') %>: <%= task.content %></td>
      <td><%= t('view.priority') %>: <%= task.priority %></td>
      <td><%= t('view.deadline') %>: <%= task.deadline.strftime("%Y-%m-%d") %></td>
      <td><%= t('view.task_status') %>: <%= task.task_status %></td>
      <td><%= link_to t('view.details'), task_path(task) %></td>
      <td><%= link_to t('view.edit'), edit_task_path(task) %></td>
      <td><%= link_to t('view.destroy'), task_path(task), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
</table>
